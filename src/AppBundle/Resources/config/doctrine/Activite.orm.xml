<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Activite" table="activite">
    <indexes>
      <index name="fk_activite_sous_domaine1_idx" columns="sous_domaine_id_sous_domaine"/>
      <index name="domaine_id_domaine" columns="domaine_id_domaine"/>
    </indexes>
    <id name="idActivite" type="integer" column="id_activite">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="libelle" type="string" column="libelle" length="45" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="tauxHoraire" type="integer" column="taux_horaire" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="domaineIdDomaine" type="integer" column="domaine_id_domaine" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <many-to-one field="sousDomaineSousDomaine" target-entity="SousDomaine" fetch="LAZY">
      <join-columns>
        <join-column name="sous_domaine_id_sous_domaine" referenced-column-name="id_sous_domaine"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
